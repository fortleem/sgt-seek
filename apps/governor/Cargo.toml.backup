[package]
name = "sgt-governor"
version = "0.1.0"
edition = "2021"

[dependencies]
axum = "0.7"
tokio = { version = "1", features = ["full"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
tracing = "0.1"
tracing-subscriber = "0.3"
uuid = { version = "1", features = ["v4", "serde"] }
chrono = "0.4"

[dev-dependencies]
reqwest = "0.11"

# Phase 2: Database & GraphQL (Blueprint Pages 24-30)
[dependencies]
# Database (Blueprint Page 24: PostgreSQL/CitusDB)
sqlx = { version = "0.8", features = ["postgres", "runtime-tokio-rustls", "macros", "chrono"] }
tokio-postgres = "0.7"
dotenv = "0.15"

# GraphQL (Blueprint Page 4: GraphQL endpoints)
async-graphql = { version = "7.0", features = ["chrono"] }
async-graphql-axum = "7.0"
async-graphql-derive = { version = "7.0", features = ["chrono"] }

# UUID for primary keys
uuid = { version = "1", features = ["serde", "v4"] }

# JSON serialization
serde_json = "1.0"

# Environment configuration
config = "0.13"
